@using Login.Domain

@model List<Student>
@{
    ViewData["Title"] = "Öğrenci Bilgileri";
}
<h1>@ViewData["Title"]</h1>

@{

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ad</th>
                <th scope="col">Soyad</th>
                <th scope="col">Güncelle</th>
                <th scope="col">Sil</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td><a href="@Url.Action("Update","Student",new {id=item.Id})">Güncelle</a></td>
                        <td><a href="@Url.Action("Delete","Student",new{id=item.Id})">Sil</a></td>
                    </tr>
                }
            }
        </tbody>



    </table>

}