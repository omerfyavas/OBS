@using Login.Domain

@model List<Lesson>
@{
    ViewData["Title"] = "Dersler";
}
<h1>@ViewData["Title"]</h1>

@{

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ders Adı</th>
                <th scope="col">Ders Kredisi</th>

            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Credit</td>
                    </tr>
                }
            }
        </tbody>



    </table>

}